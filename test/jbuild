(jbuild_version 1)

(rule
 ((targets   (run_tests.ml))
  (deps      (../lib/cli/cli.ml))
  (action    (run qtest extract -o ${@} ${^}))))

(executable
  ((name      run_tests)
   (modules   (run_tests))
   (libraries (qcheck cli))))

(alias
 ((name   runtest)
  (deps   (run_tests.exe))
  (action (run ${<}))))
